<!DOCTYPE html>
<html>
<head>
  <title>Blackbird</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
<link href='http://fonts.googleapis.com/css?family=Roboto:400,100,900,700,500,300italic,300|Rock+Salt' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <section id="header">
      <div class="centered_content">
        <%= link_to root_path, id: "home_logo_link" do %>
          <%= image_tag 'blackbird_logo_grunge.png', class: "desktop_show" %>
          <%= image_tag 'mobile_logo1.png', class: "mobile_show" %>
        <% end %>

        <i id="nav_trigger" class="fa fa-bars mobile_show"></i>

        <ul id="nav_list">
          <li><%= link_to "Samples", samples_path %></li>
          <li><%= link_to "Bios", bios_path %></li>
          <li><%= link_to "Songlist", songs_path %></li>
          <li><%= link_to "Calendar", events_path %></li>
          <li><%= link_to "Gallery", media_events_path %></li>
          <li><%= link_to "Reviews", reviews_path %></li>
          <li><%= link_to "Contact us", contacts_path %></li>
        </ul>
      </div>
    </section>
    <div class="clear"></div>
    <section id="content" class="<%= controller_name %>">
      <div class="centered_content">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
        <div class="clear"></div>
      </div>
    </section>
  <section id="footer">
    <div id="centered_content">
      <div class="user_widget">
        <%= render partial: "layouts/user_widget" %>
      </div>
      <div id="social_media">
        <ul class="inline">
          <li>
            <%= link_to "http://www.facebook.com/BlackbirdOregon", target: "_blank" do %>
              <%= icon('facebook') %>
            <% end %>
          </li>
          <li>
            <%= link_to "http://www.youtube.com/BlackbirdOregon", target: "_blank" do %>
              <%= icon('youtube') %>
            <% end %>
          </li>
          <li>
            <%= link_to "http://www.twitter.com/BlackbirdOregon", target: "_blank" do %>
              <%= icon('twitter') %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="clear"></div>
    </div>
  </section>

</body>
</html>
