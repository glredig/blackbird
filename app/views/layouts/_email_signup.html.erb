<h2>Event Notifications</h2>
<div id="email_signup_form">
<%= form_tag(apis_email_subscribe_path, method: "post", id: "subscribe", remote: "true") do -%>
   <%= email_field(:email, :address, {id: "email", placeholder: "Email address"}) %>
   <%= submit_tag("Sign me up!") %>
<% end %>
</div>
<div id="email_signup_spinner">
  <div class="center">Signing up...</div>
  <div class="loader"></div>
</div>
<div id="email_signup_message"></div>