<div class="one_third">
  <h2>Events</h2>
  <% if @events.present? %>
    <ul>
      <% @events.each do |event| %>
        <li>
          <%= link_to event_path(event) do %>
            <span>
              <%= event.date.strftime('%m.%d.%Y') %>
            </span> - 
            <%= event.summary %><br>

          <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to "View All", events_path, class: "view_all_link" %>
  <% else %>
    <p>No events scheduled.</p>
  <% end %>
</div>

<div class="one_third">
  <h2>Reviews</h2>
  <div id="review_widget" data-url="<%= reviews_url %>">
  </div>
  <%= link_to "View All", reviews_path, class: "view_all_link" %>
</div>
<div class="one_third">
  <%= render partial: "layouts/email_signup" %>
</div>
