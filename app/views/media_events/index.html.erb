<div class="two_thirds">
  <div class="pushed_content">
    <h1>media gallery</h1>
    Please click on the thumbnails to view the larger version.

    <% if user_signed_in? %>
      <%= link_to "New Event", new_media_event_path %>
    <% end %>

    <ul class="blocked gallery">
    <% @media_events.all.each do |media_event| %>
      <li>
        <%= media_event.event_date.strftime('%m/%d/%Y') %> - <%= media_event.summary %>
        <% if user_signed_in? %>
          <%= link_to "Edit", edit_media_event_path(media_event) %>
        <% end %>
        <br><br>
        <% media_event.media_images.each do |image| %>
          <%= image_tag image.media_gallery_image.thumb.url, alt: image.summary, data: {summary: image.summary, credit: image.credit, url: image.media_gallery_image.full.url} %>
        <% end %>
      </li>
    <% end %>  
    <div class="clear"></div>
    </ul>
  </div>
</div>
<%= render partial: "layouts/right_third" %>