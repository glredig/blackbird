<div class="two_thirds">
  <div class="pushed_content translucent">
    <h1>
      band reviews
      <% if user_signed_in? %>
        <%= link_to "Add new review", new_review_path, class: "pseudo_button" %>
      <% end %>
    </h1>

    <p>
      Thank you to everyone who took the time to write a review of the band. We really appreciate your kind words!
    </p>

    <ul class="blocked reviews">
      <% @reviews.each do |review| %>
        <li>
          <% if user_signed_in? %>
            <div class="pos_fr">
              <%= link_to edit_review_path(review) do %>
                <%= icon('edit', '', class: "pos_fr strong") %>
              <% end %>
            </div>
          <% end %>
          "<%= review.summary %>" <br>
          <div class="align_right"><span><%= review.anonymized_name %> (<%= review.date.strftime("%m.%d.%y") %>)</span></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render partial: "layouts/right_third" %>